<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/install_watchapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1. Install Watchapp"
                android:textColor="#AAAAAA"
                android:textSize="25sp"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button_install"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/install_watchapp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="INSTALL"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/press_a_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/button_install"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="2. Press a button on Pebble"
                android:textColor="#AAAAAA"
                android:textSize="25sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/which_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/press_a_button"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="None yet"
                android:textColor="#AAAAAA"
                android:textSize="30sp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/trigger_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/which_button"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="3. Trigger a vibration"
                android:textColor="#AAAAAA"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button_vibrate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/trigger_vibrate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="VIBRATE"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>